# Archivo de ejemplo para variables locales
# Copia este archivo como terraform.tfvars y modifica los valores según tus necesidades

# Región de AWS
aws_region = "us-east-2"

# Ambiente (dev, staging, prod)
environment = "prod"

# Tipo de instancia EC2 (t3.micro es elegible para free tier)
instance_type = "t3.micro"

# Tamaño del volumen en GB
volume_size = 20

# Ruta a tu clave pública SSH (debes generarla si no la tienes)
public_key_path = "~/.ssh/id_rsa.pub"

# Nombre del proyecto
project_name = "devops-tpi"
